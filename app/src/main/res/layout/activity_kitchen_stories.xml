<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/signback"
    android:orientation="vertical"
    tools:context=".KitchenStoriesActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/profileM0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitchen Stories"
            android:textSize="27sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            app:srcCompat="@drawable/s" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What would you Like To Cook "
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/KebabMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/picone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/GarlicMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/pictwo" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FoodName1"
            android:layout_width="100sp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="47dp"
            android:textSize="30dp"
            android:text="Kebab" />

        <TextView
            android:id="@+id/FoodName2"
            android:layout_width="150sp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="87dp"
            android:textSize="30dp"
            android:text="Garic Dish" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/pastaMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/picthree" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/ThanduriMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/picfour" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FoodName3"
            android:layout_width="100sp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="47dp"
            android:textSize="30dp"
            android:text="Pasta" />

        <TextView
            android:id="@+id/FoodName4"
            android:layout_width="150sp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="87dp"
            android:textSize="30dp"
            android:text="Thanduri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#E4E4E4"
        android:layout_marginTop="55dp"
        android:padding="8sp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeM0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/homemo" />

        <ImageView
            android:id="@+id/addM0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/addmo" />

        <ImageView
            android:id="@+id/homeS6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/homes" />



        <ImageView
            android:id="@+id/addS6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/chef" />


        <ImageView
            android:id="@+id/communityM0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/communitymo" />
    </LinearLayout>


</LinearLayout>